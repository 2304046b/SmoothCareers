@page "/jobposts/create"
@using Microsoft.EntityFrameworkCore
@using SmoothCareers.Domain
@inject IDbContextFactory<SmoothCareers.Data.SmoothCareersContext> DbFactory
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@attribute [Authorize(Roles = "Administrator, Employer")]
@using Microsoft.AspNetCore.Authorization

<PageTitle>Create</PageTitle>

<h1>Create Job Post</h1>

<div class="row">
    <div class="col-md-6">
        <EditForm Model="JobPost" OnValidSubmit="AddJobPost">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="mb-3">
                <label class="form-label">Title:</label>
                <InputText @bind-Value="JobPost.Title" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Description:</label>
                <InputText @bind-Value="JobPost.Description" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Location:</label>
                <InputText @bind-Value="JobPost.Location" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Salary:</label>
                <InputNumber @bind-Value="JobPost.Salary" class="form-control" />
            </div>

            <div class="mb-3">
                <label class="form-label">Date Posted:</label>
                <InputDate @bind-Value="JobPost.DatePosted" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div class="mt-3">
    <a href="/jobposts">Back to Job Posts List</a>
</div>

@code {
    private JobPost JobPost { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var userEmail = user.Identity?.Name ?? "";

        // Auto-fill created/updated by
        JobPost.CreatedBy = userEmail;
        JobPost.UpdatedBy = userEmail;

        // Auto-fill dates
        JobPost.DateCreated = DateTime.UtcNow;
        JobPost.DateUpdated = DateTime.UtcNow;
        JobPost.DatePosted = DateTime.UtcNow;
    }

    private async Task AddJobPost()
    {
        using var context = DbFactory.CreateDbContext();
        context.JobPost.Add(JobPost);
        await context.SaveChangesAsync();

        NavigationManager.NavigateTo("/jobposts");
    }
}
