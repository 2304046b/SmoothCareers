@page "/applications"
@using Microsoft.EntityFrameworkCore
@using SmoothCareers.Domain
@using AppEntity = SmoothCareers.Domain.Application
@inject IDbContextFactory<SmoothCareers.Data.SmoothCareersContext> DbFactory

<PageTitle>Applications</PageTitle>

<h1>My Applications</h1>

<p>
    <a href="/applications/create" class="btn btn-primary">Apply to Job</a>
</p>

@if (!loaded)
{
    <p><em>Loading...</em></p>
}
else if (applications.Count == 0)
{
    <p>No applications found yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Job Title</th>
                <th>Status</th>
                <th>Date Applied</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in applications)
            {
                <tr>
                    <td>@app.JobPost?.Title</td>
                    <td>@app.Status</td>
                    <td>@app.DateApplied.ToShortDateString()</td>
                    <td>
                        <a href="@($"/applications/details?id={app.Id}")">Details</a> |
                        <a href="@($"/applications/edit?id={app.Id}")">Edit</a> |
                        <a href="@($"/applications/delete?id={app.Id}")">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<AppEntity> applications = new();
    private bool loaded = false;

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();

        // Show only jobseeker's applications
        applications = await context.Application
            .Include(a => a.JobPost)
            .Where(a => a.JobSeekerId == 1)
            .OrderByDescending(a => a.DateApplied)
            .ToListAsync();

        loaded = true;
    }
}
